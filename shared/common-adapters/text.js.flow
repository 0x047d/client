/* @flow */

import React, {Component} from 'react'

export type Props = {
  type: 'HeaderJumbo' | 'HeaderBig' | 'Header'
          | 'Body' | 'BodySemibold' | 'BodySmall'
          | 'Error'
          | 'Terminal'
          | 'TerminalUsername' | 'TerminalPublic' | 'TerminalPrivate'
          | 'TerminalCommand' | 'TerminalComment' | 'TerminalEmpty',
  opacity?: 1 | 0.75 | 0.6 | 0.4,
  darkMode?: boolean, // For rendering on a dark background (light text)
  inline?: boolean,
  link?: boolean,
  small?: boolean,
  reversed?: boolean,
  onClick?: () => void,
  lineClamp?: number,
  style?: Object,
  children?: ReactElement
}

declare export default class Text extends React.Component {
  props: Props;
}

declare export var styles: Object
